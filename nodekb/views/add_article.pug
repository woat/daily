extends layout

block content
    h1.title.is-1 #{title}
    form(method='POST', action='/articles/add')
      .field
        label Title:
        input.input(name='title', type='text')
      .field
        label Author:
        input.input(name='author', type='text')
      .field
        label Body:
        textarea.input(name='body', type='text')
      input.btn.btn-primary(type='submit', value='Submit')
        
